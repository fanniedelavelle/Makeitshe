{
  "manifest_version": 2,
  "name": "Make it She",
  "description": "[This extension aims to replace certain male words with their female counterparts.]",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["data/words.js", "data/associative.js", "content.js"],
    "css": ["style.css"],
    "run_at": "document_end"
  }],
  "permissions": [
    "tabs"
  ]
}
